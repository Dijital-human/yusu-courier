# ===========================================
# YUSU COURIER - LOCAL ENVIRONMENT EXAMPLE
# ===========================================
# Bu fayl courier paneli üçün local development environment variables nümunəsidir
# This file is an example of environment variables for courier panel local development
# Bu faylı .env.local olaraq kopyalayın və dəyərləri doldurun
# Copy this file to .env.local and fill in the values

# ===========================================
# DATABASE CONFIGURATION / VERİTABANI KONFİQURASİYASI
# ===========================================
# SQLite database for local development / Local development üçün SQLite veritabanı
DATABASE_URL="file:./dev.db"

# ===========================================
# NEXTAUTH.JS CONFIGURATION / NEXTAUTH.JS KONFİQURASİYASI
# ===========================================
# Courier panel local development URL / Courier panel local development URL-i
NEXTAUTH_URL="http://localhost:3003"
# Secret key for JWT signing / JWT imzalamaq üçün gizli açar
NEXTAUTH_SECRET="yusu-courier-local-secret-key-2024"

# ===========================================
# OAUTH PROVIDERS / OAUTH PROVIDER-LƏR
# ===========================================
# Google OAuth (Optional for local dev) / Google OAuth (Local dev üçün istəyə bağlı)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (Optional for local dev) / Facebook OAuth (Local dev üçün istəyə bağlı)
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Apple OAuth (Optional for local dev) / Apple OAuth (Local dev üçün istəyə bağlı)
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# ===========================================
# PAYMENT GATEWAY / ÖDƏNİŞ GATEWAY-İ
# ===========================================
# Stripe Test Keys / Stripe Test Açarları
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# ===========================================
# EXTERNAL APIS / XARİCİ API-LƏR
# ===========================================
# Google Maps API (Required for courier) / Google Maps API (Courier üçün tələb olunur)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================================
# EMAIL CONFIGURATION / EMAIL KONFİQURASİYASI
# ===========================================
# SMTP Configuration for emails / Email-lər üçün SMTP konfiqurasiyası
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="courier@yusu.com"

# ===========================================
# REDIS CONFIGURATION / REDIS KONFİQURASİYASI
# ===========================================
# Redis URL for caching / Keşləmə üçün Redis URL-i
REDIS_URL="redis://localhost:6379"

# ===========================================
# APPLICATION SETTINGS / TƏTBİQ TƏNZİMLƏRİ
# ===========================================
# Node environment / Node mühiti
NODE_ENV="development"

# Application port / Tətbiq portu
PORT="3003"

# ===========================================
# SECURITY SETTINGS / TƏHLÜKƏSİZLİK TƏNZİMLƏRİ
# ===========================================
# CORS origins / CORS mənbələri
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003"

# Rate limiting / Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# Courier specific settings / Courier xüsusi tənzimləri
COURIER_SESSION_TIMEOUT="14400000"
COURIER_MAX_LOGIN_ATTEMPTS="3"

# ===========================================
# LOGGING CONFIGURATION / LOGGING KONFİQURASİYASI
# ===========================================
# Log level / Log səviyyəsi
LOG_LEVEL="debug"

# Courier specific logging / Courier xüsusi logging
COURIER_LOG_LEVEL="info"
COURIER_AUDIT_LOG="true"
COURIER_LOCATION_LOG="true"

# ===========================================
# FILE UPLOAD CONFIGURATION / FAYL YÜKLƏMƏ KONFİQURASİYASI
# ===========================================
# Upload directory / Yükləmə qovluğu
UPLOAD_DIR="./uploads"

# Max file size (in bytes) / Maksimum fayl ölçüsü (bayt)
MAX_FILE_SIZE="10485760"

# Allowed file types / İcazə verilən fayl növləri
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# ===========================================
# COURIER SPECIFIC SETTINGS / COURIER XÜSUSİ TƏNZİMLƏR
# ===========================================
# Courier panel settings / Courier panel tənzimləri
COURIER_PANEL_TITLE="Yusu Courier Panel"
COURIER_PANEL_DESCRIPTION="Yusu E-commerce Courier Management System"

# Delivery settings / Çatdırılma tənzimləri
COURIER_MAX_DELIVERIES_PER_DAY="50"
COURIER_DELIVERY_RADIUS_KM="25"
COURIER_DELIVERY_TIME_SLOT_MINUTES="30"

# Location tracking settings / Məkan izləmə tənzimləri
COURIER_LOCATION_UPDATE_INTERVAL="30000"
COURIER_LOCATION_ACCURACY_THRESHOLD="100"
COURIER_GPS_REQUIRED="true"

# Vehicle settings / Nəqliyyat vasitəsi tənzimləri
COURIER_VEHICLE_TYPES="BIKE,MOTORCYCLE,CAR,VAN"
COURIER_VEHICLE_VERIFICATION_REQUIRED="true"
COURIER_INSURANCE_REQUIRED="true"

# Payment settings / Ödəniş tənzimləri
COURIER_PAYMENT_PER_DELIVERY="5.00"
COURIER_PAYMENT_PER_KM="0.50"
COURIER_MINIMUM_PAYOUT="25.00"
COURIER_PAYOUT_SCHEDULE="weekly"

# ===========================================
# NOTIFICATION SETTINGS / BİLDİRİŞ TƏNZİMLƏRİ
# ===========================================
# Email notifications / Email bildirişləri
COURIER_EMAIL_NEW_DELIVERY="true"
COURIER_EMAIL_DELIVERY_UPDATE="true"
COURIER_EMAIL_PAYMENT_RECEIVED="true"
COURIER_EMAIL_EMERGENCY="true"

# SMS notifications / SMS bildirişləri
COURIER_SMS_NEW_DELIVERY="true"
COURIER_SMS_DELIVERY_UPDATE="true"
COURIER_SMS_EMERGENCY="true"

# Push notifications / Push bildirişləri
COURIER_PUSH_NEW_DELIVERY="true"
COURIER_PUSH_DELIVERY_UPDATE="true"
COURIER_PUSH_EMERGENCY="true"

# ===========================================
# SAFETY SETTINGS / TƏHLÜKƏSİZLİK TƏNZİMLƏRİ
# ===========================================
# Emergency settings / Təcili vəziyyət tənzimləri
COURIER_EMERGENCY_CONTACT="+994501234567"
COURIER_EMERGENCY_EMAIL="emergency@yusu.com"
COURIER_PANIC_BUTTON="true"

# Safety checks / Təhlükəsizlik yoxlamaları
COURIER_DAILY_HEALTH_CHECK="true"
COURIER_VEHICLE_SAFETY_CHECK="true"
COURIER_DRUG_TEST_REQUIRED="false"

# ===========================================
# ROUTING SETTINGS / MARŞRUT TƏNZİMLƏRİ
# ===========================================
# Route optimization / Marşrut optimallaşdırması
COURIER_ROUTE_OPTIMIZATION="true"
COURIER_TRAFFIC_AWARE="true"
COURIER_WEATHER_AWARE="true"

# Delivery windows / Çatdırılma pəncərələri
COURIER_DELIVERY_WINDOWS="09:00-12:00,13:00-17:00,18:00-21:00"
COURIER_WEEKEND_DELIVERY="true"
COURIER_HOLIDAY_DELIVERY="false"
